<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient
                android:angle="90"
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:type="linear" />

            <stroke
                android:width="4.3dp"
                android:color="#73B06A" />

            <corners
                android:radius="4dp" />

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
        </shape></item>
        <item ><bitmap
            android:gravity="bottom|right"
            android:src="@drawable/spinn_arrow" />
        </item>
    </layer-list></item>

</selector>