<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:textDirection="rtl"
    android:layoutDirection="rtl">

    <LinearLayout
        android:id="@+id/linBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgPKG"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/time_set_blue"/>

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextView.Blue.Bold"
            android:layout_weight="1"
            android:text="پکیج 30 روزه"/>

        <TextView
            android:id="@+id/lblStart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextView.Normal"
            android:layout_weight="1"
            android:text="تاریخ شروع : 1397/01/01"/>

        <TextView
            android:id="@+id/lblEnd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextView.Normal"
            android:layout_weight="1"
            android:text="تاریخ پایان : 1397/02/01"/>

        <TextView
            android:id="@+id/lblPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextView.Normal"
            android:layout_weight="1"
            android:text="قیمت : 160.000 ريال"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>