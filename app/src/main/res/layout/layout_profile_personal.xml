<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bgTitle">

            <TextView
                android:id="@+id/lblProfileDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView.Bold"
                android:text="مشخصات شخصی"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbltxtName"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView.Normal"
                    android:text="نام "
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/txtProfilePersonalDetailsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="نام را وارد کنید"
                    android:digits="ابپتثئءسجچحخدذرزسشصضطظعغفقکگلمنوهیژآ "
                    style="@style/EditText.Normal"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="10dp">
                    <requestFocus/>
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbltxtFamily"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView.Normal"
                    android:text="نام خانوادگی "
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/txtProfilePersonalDetailsFamily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="نام خانوادگی را وارد کنید"
                    android:digits="ابپتثئءسجچحخدذرزسشصضطظعغفقکگلمنوهیژآ "
                    style="@style/EditText.Normal"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbltxtBirtDate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView.Normal"
                    android:text="تاریخ تولد "
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/txtProfilePersonalDetailsBirthDay"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="تاریخ تولد را وارد کنید"
                    android:digits="0123456789/"
                    style="@style/TextView.Background"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbltxtNationality"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView.Normal"
                    android:text="شماره ملی "
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/txtProfilePersonalDetailsNationalityCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="شماره ملی ده رقمی را وارد کنید"
                    style="@style/EditText.NumberPassword.C"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtProfilePersonalDetailsSex"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        style="@style/TextView.Normal"
                        android:gravity="center|right"
                        android:textStyle="bold"
                        android:text="جنسیت "
                        android:textColor="@color/txtGray4"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RadioButton
                                        android:id="@+id/radMan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="مرد"
                                        style="RadioButton.Normal"
                                        android:checked="true"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left">

                                    <RadioButton
                                        android:id="@+id/radWoman"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        style="RadioButton.Normal"
                                        android:text="زن"/>

                                </LinearLayout>

                            </RelativeLayout>

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtProfilePersonalDetailsMarri"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center|right"
                        android:textColor="@color/txtGray4"
                        style="@style/TextView.Bold"
                        android:text="وضعیت تاهل "/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RadioButton
                                        android:id="@+id/radMotahel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="متاهل"
                                        style="RadioButton.Normal"
                                        android:checked="true"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left">

                                    <RadioButton
                                        android:id="@+id/radMojarad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="مجرد"
                                        style="RadioButton.Normal"/>

                                </LinearLayout>

                            </RelativeLayout>

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbltxtAboutMe"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView.Normal"
                    android:text="درباره من "
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/txtProfilePersonalDetailsAboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    style="@style/EditText.Normal"
                    android:hint="توضیحاتی در رابطه با خودتان وارد کنید"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:maxLength="200"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>