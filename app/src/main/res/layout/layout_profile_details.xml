<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textDirection="rtl"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:src="@drawable/profile_pic_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblUserCode1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Normal"
                        android:text="کد کاربری "/>

                    <TextView
                        android:id="@+id/lblUserCode2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Bold"
                        android:textStyle="bold"
                        android:text="123456789"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblUserPhone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Normal"
                        android:text="شماره همراه "/>

                    <TextView
                        android:id="@+id/lblUserPhone2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Bold"
                        android:text="09010278030"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/lblMoaref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Normal"
                android:visibility="gone"
                android:text="کد معرف : "/>

            <EditText
                android:id="@+id/txtMoaref"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="کد معرف"
                android:visibility="gone"
                style="@style/EditText.NumberPassword.C"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>