<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".Activityes.Login.fragResetPass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/lin"
            layout="@layout/toolbar_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/cardCode"
                android:layout_width="307dp"
                android:layout_height="167dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblTitler"
                        style="@style/TextView.Blue.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="کد پیامک شده را وارد کنید" />

                    <LinearLayout
                        android:id="@+id/linDigitCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txt6"
                            style="@style/EditText.Normal.1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="6dp" />

                        <EditText
                            android:id="@+id/txt5"
                            style="@style/EditText.Normal.1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="6dp" />

                        <EditText
                            android:id="@+id/txt4"
                            style="@style/EditText.Normal.1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="6dp" />

                        <EditText
                            android:id="@+id/txt3"
                            style="@style/EditText.Normal.1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="6dp" />

                        <EditText
                            android:id="@+id/txt2"
                            style="@style/EditText.Normal.1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="6dp" />

                        <EditText
                            android:id="@+id/txt1"
                            style="@style/EditText.Normal.1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="6dp">

                            <requestFocus />
                        </EditText>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/lblpass"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/txtPassWord"
                                        style="@style/EditText.NumberPassword.F"
                                        android:gravity="right"
                                        android:maxLength="20"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ir_sans"
                                        android:hint="کلمه عبور" />
                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left|center">

                                <ImageView
                                    android:id="@+id/imgShow"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="8dp"
                                    android:src="@drawable/eye"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>