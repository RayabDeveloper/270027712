<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".Activityes.Activities.fragTaskShow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/lin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_taskshow"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/bgTitle">

                    <TextView
                        android:id="@+id/lblDetailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Normal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:text="جزئیات فروشگاه"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Normal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:text="تام مشتری : شرکت پرند پرداز"/>

                    <TextView
                        android:id="@+id/lblCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Normal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:text="وضعیت مشتری : تولید نرم افزار"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <ImageView
                            android:id="@+id/btnMapShow"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/map_blue"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/lblAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="40dp"
                            android:gravity="center|right"
                            style="@style/TextView.Normal"/>

                    </LinearLayout>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lstPersonels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/txtGray">

                        <TextView
                            android:id="@+id/lblTask"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            style="@style/TextView.Bold"
                            android:text="وظیفه"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblTaskType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Bold"
                            android:text="نوع وظیفه : "/>

                        <TextView
                            android:id="@+id/lblTaskType1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Normal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblTaskDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Bold"
                            android:text="تاریخ و زمان وظیفه : "/>

                        <TextView
                            android:id="@+id/lblTaskDate1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Normal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblTaskDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Bold"
                            android:text="توضیحات : "/>

                        <TextView
                            android:id="@+id/lblTaskDescription1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            style="@style/TextView.Normal"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/txtGray">

                        <TextView
                            android:id="@+id/lblAct"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            style="@style/TextView.Bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblActDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Bold"
                            android:text="زمان شروع ویزیت : "/>

                        <TextView
                            android:id="@+id/lblActDate1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Normal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblActEndDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Bold"
                            android:text="زمان پایان ویزیت : "/>

                        <TextView
                            android:id="@+id/lblActEndDate1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Normal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblActCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Bold"
                            android:text="آخرین وضعیت : "/>

                        <TextView
                            android:id="@+id/lblActCondition1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Normal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblActResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView.Bold"
                            android:text="نتیجه : "/>

                        <TextView
                            android:id="@+id/lblActResult1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            style="@style/TextView.Normal"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnAddTask"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="right|center|bottom"
                android:clickable="true"
                app:srcCompat="@drawable/enter_icon"
                app:backgroundTint="@color/colorAccent"
                app:elevation="6dp"
                app:fabSize="auto"
                android:scaleType="center"
                app:pressedTranslationZ="12dp"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>