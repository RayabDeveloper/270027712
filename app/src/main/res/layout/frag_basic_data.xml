<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activityes.Setting.fragTestBasicData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/lin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_standard"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:layout_constraintVertical_bias="0.0">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtPhoneNumber"
                        style="@style/EditText.Normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ir_sans"
                        android:paddingLeft="50dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:hint="جستجو"
                        android:inputType="text"
                        android:selectAllOnFocus="true"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center">

                    <ImageView
                        android:id="@+id/btnSearche"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/search"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:switchMinWidth="300dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/txtBlue"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/lstMain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:id="@+id/btnMainAdd"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="@color/txtBlue00"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="26dp"
                                android:layout_marginRight="16dp"
                                android:layout_gravity="center"
                                android:src="@drawable/add"/>

                            <TextView
                                android:id="@+id/lblMain"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="@style/TextView.Normal"
                                android:gravity="center|right"
                                android:textColor="@color/txtWhite"
                                android:text="گروه"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linSub"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/lstSub"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:id="@+id/btnSubAdd"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="@color/txtWhite00"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="26dp"
                                android:layout_marginRight="16dp"
                                android:layout_gravity="center"
                                android:src="@drawable/add"/>

                            <TextView
                                android:id="@+id/lblSub"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="@style/TextView.Normal"
                                android:gravity="center|right"
                                android:textColor="@color/txtGray4"
                                android:text="مجموعه"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <LinearLayout
                    android:id="@+id/ViewEditor"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    android:background="@color/txtWhite"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btnDeleter"
                        android:layout_width="match_parent"
                        android:layout_height="45.5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/TextView.Blue.Bold"
                            android:gravity="center"
                            android:text="حذف"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/txtGray4"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"/>

                    <LinearLayout
                        android:id="@+id/btnUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="45.5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/TextView.Blue.Bold"
                            android:gravity="center"
                            android:text="ویرایش"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>