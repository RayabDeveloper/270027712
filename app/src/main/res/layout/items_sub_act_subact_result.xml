<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textDirection="rtl"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linMainTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/txtGray1">

            <TextView
                android:id="@+id/lblMainTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/TextView.Normal"
                android:gravity="center|right"
                android:text="مثلا عنوان SubAct"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linSubTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/txtGray">

            <TextView
                android:id="@+id/lblSubTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/TextView.Normal"
                android:gravity="center|right"
                android:layout_marginRight="6dp"
                android:text="مثلا عنوان SubActResult"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/ch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_weight="0.9"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/TextView.Normal"
                    android:gravity="center|right"
                    android:text="مثلا اسم نتیجه"/>

                <Spinner
                    android:id="@+id/spinPoint"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    style="@style/Spinner.Normal"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>