<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".Activityes.Account.Experiances.fragExperianceSchool">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/txtGray0">

        <include
            android:id="@+id/lin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_standard"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lbltxtMaghta"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="23dp"
                                android:theme="@style/TextView.Normal"
                                android:text="مقطع "/>

                            <Spinner
                                android:id="@+id/spinSchoolLevel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                style="@style/Spinner.Normal"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/txtSchoolLevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:hint="مقطل تحصیلی خود را وارد کنید "
                            android:visibility="gone"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/lbltxtField"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextView.Normal"
                            android:text="رشته تحصیلی "/>

                        <EditText
                            android:id="@+id/txtField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/EditText.Normal"
                            android:hint="رشته تحصیلی خود را وارد کنید">
                            <requestFocus/>
                        </EditText>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/lbltxtCenter"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextView.Normal"
                            android:text="مرکز آموزشی "/>

                        <EditText
                            android:id="@+id/txtSchoolCenterName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/EditText.Normal"
                            android:hint="نام مرکز آموزشی را وارد کنید"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/lbltxtOstan"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23dp"
                            android:theme="@style/TextView.Normal"
                            android:text="محل تحصیل "/>

                        <Spinner
                            android:id="@+id/spinOstan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            style="@style/Spinner.Normal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/lbltxtSum"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextView.Normal"
                            android:text="معدل "/>

                        <EditText
                            android:id="@+id/txtSum1"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            style="@style/EditText.Avrage"
                            android:hint="99"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextView.Normal"
                            android:layout_marginRight="6dp"
                            android:text="/"/>

                        <EditText
                            android:id="@+id/txtSum2"
                            android:layout_width="30dp"
                            android:layout_marginRight="6dp"
                            android:layout_height="wrap_content"
                            style="@style/EditText.Avrage"
                            android:hint="99"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="10dp">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/chSchooling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="در حال تحصیل"
                            android:textColor="@color/txtGray1"
                            android:layoutDirection="rtl"
                            android:textDirection="rtl"
                            android:layout_marginRight="76dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linFromDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/lbltxtFrom"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextView.Normal"
                                android:text="از "/>

                            <TextView
                                android:id="@+id/txtFromDate"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                style="@style/TextView.Background"
                                android:hint="از تاریخ"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linToDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/lbltxtTo"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextView.Normal"
                                android:text="تا "/>

                            <TextView
                                android:id="@+id/txtToDate"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                style="@style/TextView.Background"
                                android:hint="تا تاریخ"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/lbltxtAbout"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextView.Normal"
                            android:text="شرح "/>

                        <EditText
                            android:id="@+id/txtAbout"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            style="@style/EditText.MultiLine"
                            android:gravity="top"
                            android:hint="توضیحاتی بنویسید"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>