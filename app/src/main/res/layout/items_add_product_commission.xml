<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblFromTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                style="@style/TextView.Normal"
                android:text="از "/>

            <TextView
                android:id="@+id/lblFromNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/TextView.Normal"
                android:text="1.999.999.999"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblToTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                style="@style/TextView.Normal"
                android:text="تا "/>

            <TextView
                android:id="@+id/lblToNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/TextView.Normal"
                android:text="1.999.999.999"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/txtToNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/EditText.NumberPassword.G"
                android:hint="1.999.999.999"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.36"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/lblPercent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:visibility="gone"
                style="@style/TextView.Normal"/>

            <EditText
                android:id="@+id/txtPercent"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="%"
                style="@style/EditText.Avrage"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.44"
            android:layout_marginRight="3dp">

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/delete_red"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>